option_settings:
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: persona.settings
  aws:elasticbeanstalk:container:python:
    WSGIPath: persona.wsgi:application
    NumProcesses: 3
    NumThreads: 20

commands:
    03_migrate:
        command: "source /opt/python/current/env && source /opt/python/run/venv/bin/activate && cd /opt/python/current/app && ./manage.py migrate"
        leader_only: true
    04_collect_static:
        command: "source /opt/python/current/env/bin/activate && python manage.py collectstatic --noinput"